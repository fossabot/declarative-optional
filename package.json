{
  "name": "declarative-optional",
  "version": "2.0.0",
  "description": "A Declarative way to deal with null or undefined or promises via optional and chaining",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha  ",
    "build-ts": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "clean": "rm -rf ./dist/*",
    "build": "npm run clean && npm run test && npm run build-ts  && npm run minify",
    "minify": "uglifyjs ./dist/index.js > ./dist/index.min.js",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "postversion" : "git push && git push --tags",
    "version" : "npm run format && git add -A src",
    "publish-package": "npm run build && npm publish"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.6",
    "prettier": "^2.7.1",
    "mocha": "^10.1.0",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.1"

  },
  "keywords": [
    "declarative-optional",
    "Optional",
    "MayBe",
    "optional-js",
    "functional-programming",
    "declarative-programming",
    "monad",
    "clean-code"
  ],
  "author": "Muthukumaran Navaneethakrishnan(https://github.com/muthuishere/)",
  "license": "MIT",
  "homepage": "https://github.com/muthuishere/declarative-optional",
  "repository": {
    "type": "git",
    "url": "https://github.com/muthuishere/declarative-optional.git"
  },
    "bugs": {
      "url": "https://github.com/muthuishere/declarative-optional/issues"
    }
}
